<!DOCTYPE html>
<html>
  <head>
    <title>Free Software/Coding Academy</title>
    <%- include('../components/style') %>
  </head>

  <body>
    <%- include('../components/nav', { session: session }) %>

    <section>
      <div class="container">
				<div class="row mb-5">
					<a href="" class="btn btn-primary" data-toggle="modal" data-target="#newJournal">New Journal</a>
				</div>
        <div class="row">
          <% for(var i = 0; i < journals.length; i++ ) { %>
          <div class="col-md-6 col-lg-4 mb-3 mb-md-4">
            <div class="card h-100 hover-box-shadow">
              <div class="card-body">
                <div>
                  <p><%= journals[i].title %></p>
                  <p><%= journals[i].content %></p>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="gutter">
									<a href="#" class="mr-2">Update</a>
									<a href="/journal/delete/<%= journals[i].id %>">Delete</a>
								</div>
                <div class="text-small text-muted"><%= journals[i].createdAt %></div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
    
    <div class="modal fade" id="newJournal" tabindex="-1" aria-labelledby="newJournalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="newJournalLabel">Journal Entry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/journal" method="POST">
            <div class="modal-body">
              <div class="form-group">
                <label>Title</label>
                <input class="form-control" name="title"/>
              </div>
              <div class="form-group">
                <label>Content</label>
                <textarea class="form-control" rows="3" name="content"></textarea>
              </div>
              <div class="form-group">
                <label>Team Member</label>
                <select class="form-control" name="team">
                  <option selected>Open this select menu</option>
                  <option value="1">1</option>
                  <option value="2">2</option>
                  <option value="3">3</option>
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
		
    <%- include('../components/footer') %>
    <%- include('../components/script') %>

  </body>

</html>
