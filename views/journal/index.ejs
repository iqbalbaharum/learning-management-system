<!DOCTYPE html>
<!-- Yesterday -->
<html>
  <head>
    <title>Free Software/Coding Academy</title>
    <%- include('../components/style') %>
  </head>

  <body>
    <%- include('../components/nav', { session: session }) %>

    <section>
      <div class="container">
				<div class="row mb-5">
					<a href="" class="btn btn-primary" data-toggle="modal" data-target="#newJournal">New Journal</a>
				</div>
        <div class="row">
          <% for(var i = 0; i < journals.length; i++ ) { %>
          <div class="col-md-6 col-lg-4 mb-3 mb-md-4">
            <div class="card h-100 hover-box-shadow">
              <img src="/images/bg-title-01.jpg" class="card-img-top">
              <div class="card-header">                
                <p><%= journals[i].title %></p>
              </div>
              <div class="card-body">
                <div>
                  <p><%= journals[i].content %></p>
                  <div class="text-small text-muted"><%= journals[i].createdAt %></div>
                </div>
              </div>
              <div class="card-footer d-flex justify-content-between align-items-center">
                <div class="gutter">
                  <a href="#" class="mr-2 open-AddBookDialog" data-id="<%= journals[i].id %>">Update</a>
                  <!-- Pass data pergi ke route -> controller -->
									<a href="/journal/delete/<%= journals[i].id %>">Delete</a>
								</div>
                <div class="text-small text-muted"><%= journals[i].updatedAt %></div>
              </div>
            </div>
          </div>
          <% } %>
        </div>
      </div>
    </section>
    
    <!-- New Journal Modal -->
    <div class="modal fade" id="newJournal" tabindex="-1" aria-labelledby="newJournalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="newJournalLabel">Journal Entry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/journal" method="POST">
            <div class="modal-body">
              <div class="form-group">
                <label>Title</label>
                <input class="form-control" name="title"/>
              </div>
              <div class="form-group">
                <label>Content</label>
                <textarea class="form-control" rows="3" name="content"></textarea>
              </div>
              <div class="form-group">
                <label>Team Member</label>
                <select class="form-control" name="team">
                  <option selected>Open this select menu</option>
                  <option value="1">Team A</option>
                  <option value="2">Team B</option>
                  <option value="3">Team C</option>
                </select>
              </div>
              <div class="form-group">
                <label>Project</label>
                <select class="form-control" name="project">
                    <option selected>Select Project</option>
                    <% for(var x = 0; x < project.length; x++) { %>
                        <option value="<%= project[x].projID %>"><%= project[x].title %></option>
                    <% } %>  
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- End New Journal Modal -->

    <!-- Update Journal Modal -->
    <div class="modal fade" id="updateJournal" tabindex="-1" aria-labelledby="updateJournalLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateJournalLabel">Journal Entry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/journal/update" method="POST">
            <div class="modal-body">
              <!-- name=id sbb kat backend kita hantar id -->
              <input type="text" name="id" id="journalID" value="">
              <div class="form-group">
                <label>Title</label>
                <input class="form-control" name="title"/>
              </div>
              <div class="form-group">
                <label>Content</label>
                <textarea class="form-control" rows="3" name="content"></textarea>
              </div>
              <div class="form-group">
                <label>Team Member</label>
                <select class="form-control" name="team">
                  <option selected>Open this select menu</option>
                  <option value="1">Team A</option>
                  <option value="2">Team B</option>
                  <option value="3">Team C</option>
                </select>
              </div>
              <div class="form-group">
                <label>Project</label>
                <select class="form-control" name="project">
                    <option selected>Select Project</option>
                    <% for(var i = 0; i < project.length; i++) { %>
                        <option value="<%= project[i].projID %>"><%= project[i].title %></option>
                    <% } %>  
                </select>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    <!-- End Update Journal Modal -->
		
    <%- include('../components/footer') %>
    <%- include('../components/script') %>

    <script>
      /* # - refer to id
         . - refer to class */
      $(document).on("click", ".open-AddBookDialog", function(){
        var myJournalID = $(this).data('id');
        $(".modal-body #journalID").val(myJournalID);
        $('#updateJournal').modal('show');
      });
    </script>

  </body>

</html>
