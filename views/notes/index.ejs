<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Free Software/Coding Academy</title>
    <%- include('../components/style') %>
  </head>

  <body>
    <%- include('../components/nav', { session: session }) %>
    <section>
      <div class="container">
        <input class="form-control form-control-lg h-100 mb-2 mb-md-0 mr-md-3" name="help-search" placeholder="Search" type="search"
        id="myInput" onkeyup="myNotesSearch()">
        <br>
				<div class="row mb-5">
  					<a href="" class="btn btn-primary" data-toggle="modal" data-target="#newNotes">New Note</a>
				</div>
        <div class="row">
          <table id="myTable">
            <tr class="header">
              <th style="width:25%;">Course</th>
              <th style="width:45%;">Topic</th>
              <th style="width:20%;">Content</th>
              <th style="width:10%;">Delete</th>

          <% for(var i = 0; i < notes.length; i++ ) { %>
              <tr>
                <td><%= notes[i].course %></td>
                <td><%= notes[i].topic %></td>
                <td><a href="#" onclick="return false;" class="mr-2 open-AddBookDialog" data-id="<%= notes[i].id %>" 
                  data-course="<%= notes[i].course %>" data-topic="<%= notes[i].topic %>" data-content="<%= notes[i].content %>">View / Edit</a></td>
                <td><a href="/notes/delete/<%= notes[i].id %>" data-confirm="Are you sure you want to delete ?">Delete</a></td>
              </tr>
          <% } %>
        </table>
        </div>
      </div>
    </section>
    
    <div class="modal fade" id="updateNotes" tabindex="-1" role="dialog" aria-labelledby="updateNotesLabel" aria-hidden="true">
      <div class="modal-dialog modal-lg">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="updateNotesLabel">Notes Entry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/notes/update" method="POST">
            <div class="modal-body">
              <input type="hidden" name="id" id="NotesID" value=""/>
              <div class="form-group">
                <label>Course</label>
                <input class="form-control" id="course" name="course">
              </div>
              <div class="form-group">
                <label>Topic</label>
                <input class="form-control" id="topic" name="topic">
              </div>
              <div class="form-group">
                <label>Content</label>
                <textarea class="form-control" rows="18" id="content" name="content"></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Save changes</button>
            </div>
          </form>
        </div>
      </div>
    </div>    
   
    <div class="modal fade" id="newNotes" tabindex="-1" aria-labelledby="newNotesLabel" aria-hidden="true">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title" id="newNotesLabel">Notes Entry</h5>
            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
              <span aria-hidden="true">&times;</span>
            </button>
          </div>
          <form action="/notes" method="POST">
            <div class="modal-body">

              <div class="form-group">
                <label>Course</label>
                <input class="form-control" name="course"/>
              </div>
              <div class="form-group">
                <label>Topic</label>
                <input class="form-control" name="topic"/>
              </div>
              <div class="form-group">
                <label>Content</label>
                <textarea class="form-control" rows="3" name="content"></textarea>
              </div>
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
              <button class="btn btn-primary" type="submit">Create</button>
            </div>
          </form>
        </div>
      </div>
    </div>
    
		<%- include('../components/footer') %>
    <%- include('../components/script') %>
</body>

<script>
  
  $(document).on("click", ".open-AddBookDialog", function () {
       var NotesID = $(this).data('id');
       var course = $(this).data('course');
       var topic = $(this).data('topic');
       var content = $(this).data('content');
       $("#NotesID").val( NotesID );
       $("#course").val( course );
       $("#topic").val( topic );
       $("#content").val( content );
       // As pointed out in comments, 
       // it is unnecessary to have to manually call the modal.
       $('#updateNotes').modal('show');
    });


//Function to pop up delete modal for confirmation of deleting notes
  $(document).ready(function() {
	$('a[data-confirm]').click(function(ev) {
		var href = $(this).attr('href');
		if (!$('#dataConfirmModal').length) {
    $('body').append('<div id="dataConfirmModal" class="modal fade" role="dialog" tabindex="-1" aria-labelledby="dataConfirmLabel" aria-hidden="true"><div class="modal-dialog modal-dialog-delete"><div class="modal-content"><div class="modal-header"><button type="button" class="close" data-dismiss="modal" aria-hidden="true">Ã—</button><h3 id="dataConfirmLabel">Please Confirm</h3></div><div class="modal-body"></div><div class="modal-footer"><button type="button" class="btn btn-secondary" data-dismiss="modal" aria-hidden="true">Cancel</button><a class="btn btn-primary" id="dataConfirmOK">Confirm</a></div></div></div></div>');
		} 
		$('#dataConfirmModal').find('.modal-body').text($(this).attr('data-confirm'));
		$('#dataConfirmOK').attr('href', href);
		$('#dataConfirmModal').modal({show:true});
		return false;
	});
});

//Function for Notes Searching
function myNotesSearch() {
    var input, filter, table, tr, td, i, txtValue;
    input = document.getElementById("myInput");
    filter = input.value.toUpperCase();
    table = document.getElementById("myTable");
    tr = table.getElementsByTagName("tr");
    for (i = 0; i < tr.length; i++) {
      td = tr[i].getElementsByTagName("td")[0];
      if (td) {
        txtValue = td.textContent || td.innerText;
        if (txtValue.toUpperCase().indexOf(filter) > -1) {
          tr[i].style.display = "";
        } else {
          tr[i].style.display = "none";
        }
      }       
    }
  }

//Function to clear the content of new notes when not creating new notes

  $('#newNotes').on('hidden.bs.modal', function () {
    $(this).find("input,textarea,select").val('');

});

</script>

</html>
